@using KidKinder.Models.Entities
@model List<Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/Template/KidKinder/lib/flaticon/font/flaticon.css" rel="stylesheet" />
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Hizmet Listesi</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Hizmet Başlığı</th>
                                    <th>Açıklama</th>
                                    <th>İkon</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><i class="@item.IconUrl" style="color:blueviolet"></i></td>
                                        <td><a href="/Service/BringService/@item.ServiceId" class="btn btn-info"><i class="fa fa-edit"></i> Güncelle</a></td>
                                        <td><a href="/Service/Delete/@item.ServiceId" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <a href="/Service/Create/" class="btn btn-success"><i class="fa fa-plus-circle"></i> Yeni Hizmet</a>
                </div>
            </div>
        </div>
    </div>
</div>
