@using KidKinder.Models.Entities
@model List<Gallery>
@{
    ViewBag.Title = "GalleryIndex";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-primary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center"
         style="min-height: 400px">
        <h3 class="display-3 font-weight-bold text-white">Albüm Köşemiz</h3>

    </div>
</div>
<!-- Header End -->






<html lang="en">
<body>
    <!-- Gallery Start -->
    <div class="container-fluid pt-5 pb-3">
        <div class="container">
            <div class="text-center pb-2">
                <p class="section-title px-5">
                    <span class="px-2">Bizim Seçtiklerimiz</span>
                </p>
                <h1 class="mb-4">Okulumuzdan Kareler</h1>
            </div>
            <div class="row">
                <div class="col-12 text-center mb-2">
                    <ul class="list-inline mb-4" id="portfolio-flters">
                        <li class="btn btn-outline-primary m-1 active" data-filter="*">
                            Tüm Resimler
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row portfolio-container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4 portfolio-item">


                        <div class="position-relative overflow-hidden mb-2">
                            <img class="img-fluid w-100" src="@item.ImageUrl" alt="" />
                            <div class="portfolio-btn bg-primary d-flex align-items-center justify-content-center">
                                <a href="img/portfolio-1.jpg" data-lightbox="portfolio">
                                    <i class="fa fa-plus text-white" style="font-size: 60px"></i>
                                </a>
                            </div>
                        </div>
                        
                    </div>
                }
                </div>
        </div>
    </div>
    <!-- Gallery End -->
   
    
</body>
</html>

