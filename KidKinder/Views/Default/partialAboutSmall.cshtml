@using KidKinder.Models.Entities
@model List<About>
@{
    Layout = null;
}
@foreach (var item in Model)
{


<div class="col-lg-7">
    <p class="section-title pr-5">
        <span class="pr-2">@item.Header</span>
    </p>
    <h1 class="mb-4">@item.Title</h1>
    <p>
        @item.Description
    </p>


    <div class="row pt-2 pb-4">
        <div class="col-6 col-md-4">
            <img class="img-fluid rounded" src="@item.SmallImageUrl" alt="" />
        </div>
        <!--Liste-->
        @Html.Action("partialAboutSList", "Default")
    </div>
    <a href="/Default/ClassesIndex/" class="btn btn-primary mt-2 py-2 px-4">Daha Fazla</a>
</div>
}