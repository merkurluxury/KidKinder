@model KidKinder.Models.Entities.BookASeat


<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-5 mb-lg-0">
                <p class="section-title pr-5">
                    <span class="pr-2">Rezervasyon</span>
                </p>
                <h1 class="mb-4">Gelecek İçin Yerinizi Alın</h1>
                <p>
                    Sevgili veliler, çocuklarınızın eğitim yolculuğuna bizimle birlikte başlamaya davet ediyoruz! Nitelikli öğretmen kadromuz ve keyifli öğrenme ortamımızla çocuklarınızın her yönüyle gelişimini destekliyoruz. Onların mutlu ve başarılı bir geleceğe adım atmalarına yardımcı olmak için sizleri okulumuza bekliyoruz!
                </p>
                <ul class="list-inline m-0">
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Erken Kayıt İmkanı

                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Sınıflarımız Kontenjan İle Sınırlıdır
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Öğretmenlerimizden Destek İsteyebilirsiniz
                    </li>
                </ul>
                <a href="/Default/AboutIndex/" class="btn btn-primary mt-4 py-2 px-4">İncele..</a>
            </div>
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Kayıt Ol</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        @using (Html.BeginForm("CreateBookASeat", "Default", FormMethod.Post))
                        {
                            <form>
                                <div class="form-group">
                                    <input type="text"
                                           name="Name"
                                           class="form-control border-0 p-4"
                                           placeholder="Ad/Soyad"
                                           required="required" />
                                </div>
                                <div class="form-group">
                                    <input type="email"
                                           name="Email"
                                           class="form-control border-0 p-4"
                                           placeholder="Email"
                                           required="required" />
                                </div>
                                <div class="form-group">
                                    @Html.DropDownListFor(x=>x.Class,(List<SelectListItem>)ViewBag.v, new {@class= "custom-select border-0 px-4", style= "height: 47px" })
                                </div>
                                <div>
                                    <button class="btn btn-secondary btn-block border-0 py-3"
                                            type="submit">
                                        Kaydet
                                    </button>
                                </div>
                            </form>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>