@model KidKinder.Models.Entities.Teacher
@{
    ViewBag.Title = "CreateTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Basic Form Inputs card start -->
                    <div class="card shadow-lg">
                        <div class="card-header bg-primary text-white">
                            <h5 class="m-0">Yeni Öğretmen Kayıt Sayfası</h5>
                        </div>
                        <div class="card-body">
                            <form method="post" class="needs-validation" novalidate>
                                <div class="form-group row">
                                    <label for="NameSurname" class="col-sm-2 col-form-label">Öğretmen Ad-Soyad:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control form-control-lg" id="NameSurname" name="NameSurname" required>
                                        <div class="invalid-feedback">Lütfen bir ad soyad giriniz.</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="BranchID" class="col-sm-2 col-form-label">Öğretmen Branş:</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.BranchID, (List<SelectListItem>)ViewBag.v, "-- Branş Seçin --", new { @class = "form-control form-control-lg" })
                                        <div class="invalid-feedback">Lütfen bir branş seçiniz.</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ImageUrl" class="col-sm-2 col-form-label">Öğretmen Resim Url:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control form-control-lg" id="ImageUrl" name="ImageUrl" required>
                                        <div class="invalid-feedback">Lütfen bir resim URL'si giriniz.</div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <button type="submit" class="btn btn-lg btn-success rounded-pill"><i class="fas fa-save"></i> KAYDET</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Basic Form Inputs card end -->
                </div>
            </div>
        </div>
    </div>
</div>
