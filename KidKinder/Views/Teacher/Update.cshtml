@model KidKinder.Models.Entities.Teacher
@{
    ViewBag.Title = "BringTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Yeni ı</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Update", "Teacher", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        <div class="col-md-12">
                            @Html.HiddenFor(x => x.TeacherId)
                            <label for="NameSurname" class="form-label">TeacherId :</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control mb-3", @required = "required" })
                        </div>
                        <div class="col-md-12">
                            <label for="NameSurname" class="form-label">Ad Soyad :</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control mb-3", @required = "required" })
                        </div>
                        <div class="col-md-12">
                            <label for="BranchID" class="form-label">Branş :</label>
                            @Html.DropDownListFor(x => x.BranchID, (List<SelectListItem>)ViewBag.v, new { @class = "form-select mb-3" })
                        </div>
                        <div class="col-md-12">
                            <label for="ImageUrl" class="form-label">İmage Url :</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control mb-3", @required = "required" })
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
