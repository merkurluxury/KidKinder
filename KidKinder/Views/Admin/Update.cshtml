@model KidKinder.Models.Entities.Admin
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="main-body">
    <div class="page-wrapper">
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Basic Form Inputs card start -->
                    <div class="card">
                        <div class="card-header">
                            <h5>Güncelleme Sayfası</h5>
                        </div>
                        <div class="card-block">
                            @using (Html.BeginForm("Update", "Admin", FormMethod.Post))
                            {
                                <form method="post">

                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.AdminId, new { @class = "form-control form-control-round", @required = "required", @type = "hidden" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Başlık :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control form-control-round", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">İkon Url :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-round", @required = "required" })
                                        </div>
                                    </div>
                                   
                                    <button class="btn btn-success">KAYDET</button>
                                </form>
                            }
                        </div>
                    </div>
                    <!-- Basic Form Inputs card end -->
                </div>
            </div>
        </div>
    </div>
</div>

