@model KidKinder.Models.Entities.ClassRoom
@{ ViewBag.Title = "BringClass";
    Layout = "~/Views/AdminLayout/Index.cshtml"; }


<div class="main-body">
    <div class="page-wrapper">
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Basic Form Inputs card start -->
                    <div class="card shadow">
                        <div class="card-header bg-black text-white">
                            <h5 class="m-0" style="font-size: 1.5rem;">Yeni Sınıf Kayıt Sayfası</h5>
                        </div>
                        <div class="card-body bg-light">
                            @using (Html.BeginForm("UpdateClass", "Classes", FormMethod.Post))
                            {
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Başlık :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ClassRoomId, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Başlık :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Açıklama :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Yaş Aralığı :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.AgeOfKids, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Toplam Ders :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.TotalSeat, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Başlangıç Saati :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ClassTime, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Ücret :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label" style="font-size: 1.2rem;">Resim Uzantısı :</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control form-control-lg", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="text-left">
                                        <button class="btn btn-dark btn-lg rounded-pill"><i class="fas fa-upload text-white"></i> Güncelle</button>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                    <!-- Basic Form Inputs card end -->
                </div>
            </div>
        </div>
    </div>
</div>

